{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./src", // This sets the base directory
    "paths": {
      "@/*": ["*"] // Aliases @ to the src directory
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
